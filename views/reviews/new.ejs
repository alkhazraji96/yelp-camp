<%- include('../partials/header.ejs') %>

<div class="row">
    <h1 class="text-center">New Review: <%= campground.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%= campground.slug %>/reviews" method="POST">
            <div class="form-group">
                <h2 class="mb-4" for="rating">Leave a rating:</h2>
                <fieldset class="starability-basic">
                    <input type="radio" id="no-rate-basic" class="input-no-rate" name="rating" value="0" checked=""
                        aria-label="No rating.">

                    <input type="radio" id="rate1" name="rating" value="1">
                    <label for="rate1" title="Terrible">1 star</label>

                    <input type="radio" id="rate2" name="rating" value="2">
                    <label for="rate2" title="Not good">2 stars</label>

                    <input type="radio" id="rate3" name="rating" value="3">
                    <label for="rate3" title="Average">3 stars</label>

                    <input type="radio" id="rate4" name="rating" value="4">
                    <label for="rate4" title="Very good">4 stars</label>

                    <input type="radio" id="rate5" name="rating" value="5">
                    <label for="rate5" title="Amazing">5 stars</label>

                    <span class="starability-focus-ring"></span>
                </fieldset>
                <div class="form-group mt-3">
                    <textarea class="form-control" type="text" name="text"
                        placeholder="Write a review for this campground..." rows="5"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit a Review</button>
                </div>
        </form>
        <a href="/campgrounds/<%= campground.slug %>">Go Back</a>
    </div>
</div>
<%- include('../partials/footer.ejs') %>