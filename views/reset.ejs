<%- include('partials/header.ejs') %>

<form class="form-signin text-center" action="/reset/<%= token %>" method="POST">
    <h1 class="h3 mb-3 font-weight-normal">Please Enter New Password</h1>
    <input type="password" class="form-control" name="password" placeholder="New Password" required autofocus>
    <input type="password" class="form-control" name="confirm" placeholder="Confirm Password" required>
    <button class="btn btn-lg btn-primary btn-block mt-4" type="submit">Update Password</button>
</form>

