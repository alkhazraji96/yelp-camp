<%- include('../partials/header.ejs') %>

<h1 class="text-center">Create a New Campground</h1>
<div style="width: 50%; margin: 25px auto;">
    <form action="/campgrounds" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <input class="form-control" type="text" placeholder="name" name="campground[name]">
        </div>
        <div class="form-group">
            <input class="form-control" type="number" placeholder="$ price" name="campground[price]" min="0.10"
                step="0.05">
        </div>
        <div class="input-group mb-3">
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="inputGroupFile01" name="campground[imageId]"
                    aria-describedby="inputGroupFileAddon01" accept="image/*" required>
                <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
            </div>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Description" name="campground[description]">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
    </form>
</div>

<%- include('../partials/footer.ejs') %>